---
export interface Props {
  label: string;
  text: string;
}

const { label, text } = Astro.props;
---

<aside class="rounded-2xl border border-default bg-offset p-6">
  <div class="text-xs font-semibold uppercase tracking-wide text-offset">
    {label}
  </div>
  <p class="mt-3 text-sm leading-relaxed text-offset">{text}</p>
</aside>

