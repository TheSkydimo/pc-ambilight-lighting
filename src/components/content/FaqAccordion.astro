---
export interface FaqItem {
  q: string;
  a: string;
}

export interface Props {
  items: FaqItem[];
}

const { items } = Astro.props;
---

<div class="space-y-3">
  {items.map((item) => (
    <details class="rounded-2xl border border-default bg-offset p-5">
      <summary class="cursor-pointer list-none text-sm font-semibold">
        {item.q}
      </summary>
      <div class="mt-3 text-sm leading-relaxed text-offset">
        {item.a}
      </div>
    </details>
  ))}
</div>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }
</style>

