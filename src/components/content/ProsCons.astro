---
export interface Props {
  pros?: string[];
  cons?: string[];
  labelPros: string;
  labelCons: string;
}

const { pros, cons, labelPros, labelCons } = Astro.props;
---

<section class="grid gap-4 sm:grid-cols-2">
  <div class="rounded-2xl border border-default bg-offset p-5">
    <div class="text-sm font-semibold">{labelPros}</div>
    {pros?.length ? (
      <ul class="mt-3 space-y-2 text-sm text-offset">
        {pros.map((item) => (
          <li class="flex gap-2">
            <span aria-hidden="true" class="text-secondary">+</span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    ) : (
      <p class="mt-3 text-sm text-offset">—</p>
    )}
  </div>
  <div class="rounded-2xl border border-default bg-offset p-5">
    <div class="text-sm font-semibold">{labelCons}</div>
    {cons?.length ? (
      <ul class="mt-3 space-y-2 text-sm text-offset">
        {cons.map((item) => (
          <li class="flex gap-2">
            <span aria-hidden="true" class="text-primary">−</span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    ) : (
      <p class="mt-3 text-sm text-offset">—</p>
    )}
  </div>
</section>

