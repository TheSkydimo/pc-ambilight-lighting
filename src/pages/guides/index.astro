---
import { getCollection } from "astro:content";
import BaseLayout from "~/layouts/BaseLayout.astro";
import { DEFAULT_LOCALE } from "~/i18n/config";
import { buildPageData } from "~/i18n/page-data";
import { localizePathname } from "~/i18n/config";

const locale = DEFAULT_LOCALE;
const pathname = "/guides/";
const { site } = Astro;
const pageData = buildPageData(locale, site, pathname);
const { copy } = pageData;

const title = "PC Ambilight Setup Guides — Low Latency, Conflicts, Not Detected";
const intro =
  "Install, tune low latency, avoid driver conflicts, fix “not detected”, and stay safe (ARGB vs RGB wiring).";

const entries = await getCollection("guides", (e) => e.slug.startsWith(`${locale}/`));
const items = entries
  .map((e) => {
    const slug = e.slug.split("/").slice(1).join("/");
    return {
      slug,
      title: e.data.title,
      description: e.data.description,
      href: localizePathname(locale, `/guides/${slug}/`),
      updatedAt: e.data.updatedAt,
    };
  })
  .sort((a, b) => (b.updatedAt?.getTime() ?? 0) - (a.updatedAt?.getTime() ?? 0));
---

<BaseLayout locale={locale} pathname={pathname} title={title} description={intro}>
  <header class="space-y-3">
    <h1 class="text-3xl font-semibold tracking-tight">{title}</h1>
    <p class="max-w-3xl text-sm text-offset">
      {intro}
    </p>
  </header>

  <div class="mt-8 grid gap-4 sm:grid-cols-2">
    {items.map((item) => (
      <a class="rounded-2xl border border-default bg-offset p-6 hover:border-white/30" href={item.href}>
        <div class="text-sm font-semibold">{item.title}</div>
        <p class="mt-2 text-sm text-offset">{item.description}</p>
        <div class="mt-4 text-xs text-white/60">{copy.common.readMore} →</div>
      </a>
    ))}
  </div>
</BaseLayout>

