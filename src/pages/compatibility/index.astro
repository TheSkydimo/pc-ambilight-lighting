---
import BaseLayout from "~/layouts/BaseLayout.astro";
import { DEFAULT_LOCALE } from "~/i18n/config";
import { localizePathname } from "~/i18n/config";

const locale = DEFAULT_LOCALE;
const pathname = "/compatibility/";

const title = "PC RGB Compatibility Hub — Matrix & Not Detected Fixes";
const intro =
  "Check device/software compatibility fast, then fix the common failure modes (driver conflicts, USB issues, sleep/wake, and “not detected”).";
---

<BaseLayout locale={locale} pathname={pathname} title={title} description={intro}>
  <header class="space-y-3">
    <h1 class="text-3xl font-semibold tracking-tight">{title}</h1>
    <p class="max-w-3xl text-sm text-offset">
      {intro}
    </p>
  </header>

  <div class="mt-8 grid gap-4 sm:grid-cols-2">
    <a class="rounded-2xl border border-default bg-offset p-6 hover:border-white/30" href={localizePathname(locale, "/compatibility/matrix/")}>
      <div class="text-sm font-semibold">Compatibility matrix</div>
      <p class="mt-2 text-sm text-offset">
        Scan support by software × device type × connection method (with evidence notes).
      </p>
    </a>
    <a class="rounded-2xl border border-default bg-offset p-6 hover:border-white/30" href={localizePathname(locale, "/compatibility/not-detected/")}>
      <div class="text-sm font-semibold">Not detected</div>
      <p class="mt-2 text-sm text-offset">
        Fast troubleshooting: symptom → likely cause → steps → verification.
      </p>
    </a>
  </div>
</BaseLayout>

