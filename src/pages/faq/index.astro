---
import { getEntry } from "astro:content";
import BaseLayout from "~/layouts/BaseLayout.astro";
import { DEFAULT_LOCALE } from "~/i18n/config";
import FaqAccordion from "~/components/content/FaqAccordion.astro";

const locale = DEFAULT_LOCALE;
const pathname = "/faq/";

const entry = await getEntry("faq", "en");
if (!entry) {
  throw new Error("Missing FAQ data for en");
}

const title = "PC Ambilight FAQ — Setup, Compatibility, Troubleshooting";
const intro =
  "Fast answers for PC Ambilight / screen-sync RGB setups. If you’re troubleshooting, start with Compatibility → Not detected.";
---

<BaseLayout locale={locale} pathname={pathname} title={title} description={intro}>
  <header class="space-y-3">
    <h1 class="text-3xl font-semibold tracking-tight">{entry.data.title}</h1>
    <p class="max-w-3xl text-sm text-offset">
      {intro}
    </p>
  </header>

  <div class="mt-8">
    <FaqAccordion items={entry.data.items} />
  </div>
</BaseLayout>

