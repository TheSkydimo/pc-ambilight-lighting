---
import { getEntry } from "astro:content";
import invariant from "tiny-invariant";
import BaseLayout from "~/layouts/BaseLayout.astro";
import { DEFAULT_LOCALE } from "~/i18n/config";
import FaqAccordion from "~/components/content/FaqAccordion.astro";

const locale = DEFAULT_LOCALE;
const pathname = "/faq/";

const entry = await getEntry("faq", "en");
invariant(entry, "Missing FAQ data for en");
---

<BaseLayout locale={locale} pathname={pathname} title="FAQ">
  <header class="space-y-3">
    <h1 class="text-3xl font-semibold tracking-tight">{entry.data.title}</h1>
    <p class="max-w-3xl text-sm text-offset">
      Fast answers to common questions. If you’re troubleshooting, start with Compatibility → Not detected.
    </p>
  </header>

  <div class="mt-8">
    <FaqAccordion items={entry.data.items} />
  </div>
</BaseLayout>

