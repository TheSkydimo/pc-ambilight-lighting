---
import { getEntry } from "astro:content";
import invariant from "tiny-invariant";
import type { Locale } from "~/i18n/config";
import { buildPageData } from "~/i18n/page-data";
import BestPicksPage from "~/templates/BestPicksPage.astro";

const locale: Locale = "zh";
const pathname = "/best-free-ambilight-software/";
const slug = "best-free-ambilight-software";

const { site } = Astro;
const pageData = buildPageData(locale, site, pathname);
const { copy } = pageData;

const entry = await getEntry("bestPicks", `${locale}/${slug}`);
invariant(entry, `Missing bestPicks entry for ${locale}/${slug}`);
---

<BestPicksPage
  locale={locale}
  pathname={pathname}
  entry={entry}
  labels={{
    tldr: copy.common.tldr,
    updated: copy.common.updated,
    lastTested: copy.common.lastTested,
    toc: "本页目录",
    disclosureTitle: copy.footer.legal.disclosureTitle,
    readMore: copy.nav.reviews,
    topPicksTitle: "推荐结论",
    bestFor: "适合人群",
    pricing: "价格",
  }}
/>

